@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/resumen.css">

<div class="container">
    <h1>Resumen de la reserva</h1>
    <div class="summary">
        <p>Por favor revise los detalles de su reserva y confirme.</p>
    </div>

    <div class="section">
        <h2>Detalles del titular</h2>
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" placeholder="Nombre del titular">
            <label for="telefono">Teléfono</label>
            <input type="text" id="telefono" placeholder="Teléfono del titular">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" placeholder="Correo del titular">
        </div>
    </div>

    <div class="section">
        <h2>Habitaciones</h2>
        <div class="form-group">
            <label for="habitaciones">Habitaciones</label>
            <input type="text" id="habitaciones" placeholder="Sus habitaciones">
            <label for="cantidad">Cantidad</label>
            <input type="number" id="cantidad" placeholder="Número de huéspedes">
        </div>
        <div class="form-group">
            <label for="fecha-ingreso">Fecha de ingreso</label>
            <input type="date" id="fecha-ingreso">
            <label for="fecha-salida">Fecha de salida</label>
            <input type="date" id="fecha-salida">
        </div>
    </div>

    <div class="button-container">
        <button id="confirmar">CONFIRMAR</button>
    </div>
</div>


<script src="~/js/resumen.js"></script>