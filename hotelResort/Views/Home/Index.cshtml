<script>
    // JavaScript para animaciones al hacer scroll
    document.addEventListener('DOMContentLoaded', function() {
        const animatedElements = document.querySelectorAll('.animate-fade-in, .animate-slide-up, .animate-scale-in, .animate-card, .animate-scale-in-delayed, .animate-fade-in-delayed');

        // Función para verificar si un elemento está en el viewport
        function isInViewport(element) {
            const rect = element.getBoundingClientRect();
            return (
                rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.9 &&
                rect.bottom >= 0
            );
        }

        // Función para manejar las animaciones al hacer scroll
        function checkScroll() {
            animatedElements.forEach(element => {
                if (isInViewport(element)) {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0) scale(1)';
                }
            });
        }

        // Inicializar opacidad y transformaciones
        animatedElements.forEach(element => {
            if (element.classList.contains('animate-fade-in') || element.classList.contains('animate-fade-in-delayed')) {
                element.style.opacity = '0';
                element.style.transition = 'opacity 1s ease-out';
            }
            if (element.classList.contains('animate-slide-up')) {
                element.style.opacity = '0';
                element.style.transform = 'translateY(50px)';
                element.style.transition = 'opacity 1s ease-out, transform 1s ease-out';
            }
            if (element.classList.contains('animate-scale-in')) {
                element.style.opacity = '0';
                element.style.transform = 'scale(0.9)';
                element.style.transition = 'opacity 1s ease-out, transform 1s ease-out';
            }
            if (element.classList.contains('animate-scale-in-delayed')) {
                element.style.opacity = '0';
                element.style.transform = 'scale(0.9)';
                element.style.transition = 'opacity 1s ease-out 0.3s, transform 1s ease-out 0.3s';
            }
            if (element.classList.contains('animate-card')) {
                element.style.opacity = '0';
                element.style.transform = 'translateY(30px)';
                element.style.transition = 'opacity 0.8s ease-out, transform 0.8s ease-out';
            }
        });

        // Verificar al cargar y al hacer scroll
        checkScroll();
        window.addEventListener('scroll', checkScroll);
    });

    let lastScrollTop = 0; // Posición anterior del scroll
    const header = document.querySelector(".header");

    window.addEventListener("scroll", function () {
    let currentScroll = window.pageYOffset || document.documentElement.scrollTop;

    if (currentScroll > lastScrollTop) {
        // Desplazando hacia abajo -> ocultar header
        header.style.transform = "translateY(-100%)";
    } else {
        // Desplazando hacia arriba -> mostrar header
        header.style.transform = "translateY(0)";
    }

    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll; // Evita valores negativos
    });

</script>