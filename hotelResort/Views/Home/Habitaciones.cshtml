<!-- MODAL DE RESERVA -->
<div id="modalReserva" class="modal">
    <div class="modal-contenido">
        <span class="cerrar-modal">&times;</span>
        <iframe src="/Home/Booking" class="iframe-reserva"></iframe>
    </div>
</div>

<script>
    let lastScrollTop = 0; // Posición anterior del scroll
    const header = document.querySelector(".header");

    window.addEventListener("scroll", function () {
        let currentScroll =
        window.pageYOffset || document.documentElement.scrollTop;

        if (currentScroll > lastScrollTop) {
        // Desplazando hacia abajo -> ocultar header
        header.style.transform = "translateY(-100%)";
        } else {
        // Desplazando hacia arriba -> mostrar header
        header.style.transform = "translateY(0)";
        }

        lastScrollTop = currentScroll <= 0 ? 0 : currentScroll; // Evita valores negativos
    });

    // Abrir el modal al hacer clic en cualquier botón .btn-pulse
    const botonesReserva = document.querySelectorAll(".btn-pulse");
    const modal = document.getElementById("modalReserva");
    const cerrar = document.querySelector(".cerrar-modal");

    botonesReserva.forEach((boton) => {
        boton.addEventListener("click", () => {
        modal.style.display = "block";
        });
    });

    // Cerrar al hacer clic en la X
    cerrar.addEventListener("click", () => {
        modal.style.display = "none";
    });

    // Cerrar si se hace clic fuera del contenido
    window.addEventListener("click", (e) => {
        if (e.target === modal) {
        modal.style.display = "none";
        }
    });
</script>
